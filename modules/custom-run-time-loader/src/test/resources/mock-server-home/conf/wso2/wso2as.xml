isherURL>        <StreamId>org.wso2.http.stat:1.0.0</StreamId>    </StatisticsPublisher>    <Security>        <KeyStore>            <Location>${catalina.base}/keystore.jks</Location>            <Type>JKS</Type>            <Password>wso2carbon</Password>            <KeyAlias>wso2carbon</KeyAlias>            <KeyPassword>wso2carbon</KeyPassword>        </KeyStore>        <TrustStore>            <Location>${catalina.base}/client-truststore.jks</Location>            <Type>JKS</Type>            <Password>wso2carbon</Password>        </TrustStore>    </Security></AppServer>